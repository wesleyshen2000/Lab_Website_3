//- player-info.pug
include ../partials/header.pug
include ../partials/menu.pug

div.container
  br
  div.row
    div.col-4
      div.card
        //- TODO: Modify the pug code below to conditionally set the image_src
        - let image_src = '../../resources/img/helmet.jpg'

        img.card-img-top#player_img(src= image_src, alt="Football Player")
        div.card-body.mx-auto
          form.form(action="/player_info/post", method="get")
            select.custom-select(name="player_choice", onchange="this.form.submit()")
              option(selected) Select Player
              //- TODO: Populate the select with player options. Set the value to the player's id and display the player's name.
              for player in players
                //update the name to be displayed under the drop down menu when selected
                if(players_id == player.id) 
                  option(value=player.id selected)= player.name
                else
                  option(value=player.id)= player.name

    div.col-8
      div.table-responsive
        table.table
          //- TODO: Set the player's information. On select, fill in the player's information in each of the field below. You will need to calculate the average rushing, receiving, and passing yards.
          tr
            th Year
            if(players_id)
              td= player.year
            else
              td N/A
          tr
            th Major
            if(players_id)
              td= player.major
            else
              td N/A
          tr
            th Games Played
            if(players_id)
              td= number_of_games
            else
              td N/A
          tr
            if(players_id)
              td= "Passing Yards: " + player.passing_yards
            else
              td Passing Yards: N/A
            if(players_id)
              td= "Avg. Passing Yards: " + (player.passing_yards/number_of_games).toFixed(1)
            else
              td Avg. Passing Yards: N/A
          tr
            if(players_id)
              td= "Rushing Yards: " + player.rushing_yards
            else
              td Rushing Yards: N/A
            if(players_id)
              td= "Avg. Rushing Yards: " + (player.rushing_yards/number_of_games).toFixed(1)
            else
              td Avg. Rushing Yards: N/A
          tr
            if(players_id)
              td= "Receiving Yards: " + player.receiving_yards
            else
              td Receiving Yards: N/A
            if(players_id)
              td= "Avg. Receiving Yards: " + (player.receiving_yards/number_of_games).toFixed(1)
            else
              td Avg. Receiving Yards: N/A

include ../partials/footer.pug